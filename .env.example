# ====================================
# BridgeIT Backend Environment Variables
# ====================================
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control!

# Django Settings
# ====================================
# Generate a new secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-this-in-production

# Set to False in production
DEBUG=False

# Comma-separated list of allowed hosts
# For Render: your-app-name.onrender.com
# For local: localhost,127.0.0.1
ALLOWED_HOSTS=localhost,127.0.0.1,your-app-name.onrender.com

# Database Configuration
# ====================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://user:password@host:5432/database

# CORS Settings
# ====================================
# For Flutter Mobile Apps (APK - not published on Play Store):
# Mobile apps don't have a traditional web origin, so you have two options:

# Option 1: Allow all origins (RECOMMENDED for development/testing)
# Set this to True when testing your APK
CORS_ALLOW_ALL_ORIGINS=True

# Option 2: Restrict to specific origins (for web apps or production)
# If you have a web version or want stricter security, use this instead:
# CORS_ALLOWED_ORIGINS=https://your-app-name.onrender.com,http://localhost:3000
# CORS_ALLOW_ALL_ORIGINS=False

# For local development with Flutter app on same network:
# CORS_ALLOWED_ORIGINS=http://10.0.2.2:8000,http://192.168.x.x:8000

# CSRF Settings
# ====================================
# Comma-separated list of trusted origins for CSRF
# Must include https:// or http://
CSRF_TRUSTED_ORIGINS=https://your-app-name.onrender.com

# API Keys
# ====================================
# Google Gemini API Key for AI features
GEMINI_API_KEY=your-gemini-api-key-here

# Media Files (Optional)
# ====================================
# For production, configure cloud storage
# AWS S3 Configuration (if using)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Cloudinary Configuration (if using)
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# Server Configuration
# ====================================
# Number of Gunicorn worker processes
WEB_CONCURRENCY=4

# Python Version (for Render)
PYTHON_VERSION=3.11.0
